html,body
  width 100%
  height 100%
  
.content-wrapper
  height 100%
  padding 0
  
.form-section
  width 30%
  height 100%
  padding 15px
  float left
  
.doc-section
  width 70%
  height 100%
  float left
  padding 0px 15px

.editor-pane,.preview-pane
  width 50%
  height 100%
  float left
  
  
.doc-pages-wrapper
  overflow auto
  background-color white
  height 100%
  padding 30px 30px
  box-shadow 0px 0px 20px 2px rgba(230,230,230,1)
  
.form-wym, #textarea-wym
  height 100%
  width 100%
  
//wym-editor styles ( move to wym editor later )
.wym_box .wym_box_0 .wym_skin_default
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  overflow: auto;

.wym_area_main
  margin-right: 155px;
  height: 90%;
  width: 100%;
  
.wym_iframe .wym_section
  height 100%
  
.wym_skin_default .wym_iframe iframe
  width: 100%;
  height: 100%;
  border: none;
  background: white;
  
.text-center
  text-align center  
  
.text-left
  text-align left
  
.text-right
  text-align right
  
.text-justify
  text-align justify
  
.navbar-home
  background-color #8BC34A
  color #F1F8E9
  
  .navbar-brand
    color #F1F8E9 
    
  .navbar-collapse.form
    color #F1F8E9
    border-color #F1F8E9
    
  a.dropdown-toggle
        color #F1F8E9 !important
    
  .form-control[type=text]
    box-shadow: inset 0 -1px 0 #F1F8E9;
    
  a.dropdown-toggle:focus
    background-color #7CB342 !important
    color white
    
  ::placeholder
    color #F1F8E9;
    
.navbar-admin
  &.navbar,&.navbar-inverse
    border-radius 0
    border-color none
    box-shadow none
    margin-bottom 0

.toolbar-pane
  min-height 30px
  padding-left 15px
  font-size 1.1em
  color white
  background-color #2196F3
  
  .glyphicon
    font-size 1.2em
  
  .btn
    height 100%
    padding 3px 16px
    box-shadow none
    margin-left 10px
    
@media print
  nav
  .editor-pane
  .toolbar-pane
    display none
  
  .preview-pane
    display block
    width 100%
    height auto
  